<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="cs151.application.DefineLanguagesController"
      alignment="TOP_CENTER" spacing="15.0"
      prefHeight="400.0" prefWidth="400.0"
      fillWidth="true">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <!-- Title -->
    <Label text="Define Programming Languages" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

    <!-- Input field with Add button -->
    <HBox spacing="10" alignment="CENTER_LEFT">
        <TextField fx:id="nameField" promptText="Enter language" HBox.hgrow="ALWAYS"/>
        <Button text="Add" onAction="#onAdd"/>
    </HBox>

    <Label fx:id="errorLabel" textFill="red"/>

    <!-- Label above list of languages -->
    <Label text="Current Programming Languages"/>

    <!-- List of languages -->
    <ListView fx:id="languagesList" prefHeight="200" prefWidth="350" VBox.vgrow="ALWAYS"/>

    <!-- Back button -->
    <HBox spacing="8">
        <Button text="Save to CSV" onAction="#onSave"/>
        <Button text="Clear" onAction="#onClear"/>
        <Button text="Delete Selected" onAction="#onDelete"/>
        <Button text="Back" onAction="#goBack"/>
    </HBox>
</VBox>